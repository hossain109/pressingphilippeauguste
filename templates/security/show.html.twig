{% extends 'layoutAdmin.html.twig' %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="table-bordered pl-2 pr-2 pt-5 pb-5">
<strong>Les Comptes</strong>
<table class="table table-striped">
	<thead>
		<th>Username</th><th>Email</th><th>Password</th><td>Action</td>
	</thead>
	<tbody>
			{% for user in users %}
			<tr>
				<td>{{ user.username }}</td><td>{{ user.email }}</td><td>{{ user.password }}</td><td><a href="{{ path('user_delete',{'id': user.id}) }}" class="btn btn-primary {% if app.user.username != user.username %}disabled{% endif %} ">Suprime</a></td>
			</tr>
			{% endfor %}
	</tbody>
</table>
</div>
{% else %}	
	{% include 'security/login.html.twig' %}
{% endif %}
{% endblock %}