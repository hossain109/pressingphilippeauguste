{% extends 'layout.html.twig' %}
{% block body %}
<div class="table-bordered pl-2 pr-2 pt-5 pb-5">
    <div class="row">
        <div class="col-md-9 offset-3">
    {% if error %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-warning col-md-6">
                {{ message }}
         </div>
    {% endfor %}
    {% endif %}
    <strong>Se Connecter</strong><p>&nbsp;</p>
    <form action="{{ path('login') }}" method="post">
    <fieldset class="form-group col-md-6">
        <label for="username">Username:</label>
        <span class="text-danger font-weight-bold">*</span>
        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" />
    </fieldset>
    <fieldset class="form-group col-md-6">
        <label for="password">Password:</label>
        <span class="text-danger font-weight-bold">*</span>
        <input type="password" id="password" class="form-control" name="_password" />
    </fieldset>
        <button type="submit" class="btn btn-info ml-3 mb-3" >login</button>
    </form>
        </div>
        <div class="col-md-9 offset-3 pb-3">
            <a class="btn btn-link" href="{{ path('user_registration') }}">Ne pas enregistr√© ? Inscription..</a>
        </div>
    </div>
</div>
{% endblock %}

