{% extends 'layoutAdmin.html.twig' %}
{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="table-bordered pl-2 pr-2 pt-5 pb-5">
	<h1>Les Contacts du Demande de rappel</h1><hr>
<table class="table table-striped">
	<thead>
		<th>nom</th><th>portable</th><th>heure du message</th><th>Action</th>
	</thead>
	<tbody>
			{% for rappel in rappels %}
			<tr>
				<td>{{ rappel.nom }}</td><td>{{ rappel.portable }}</td><td>{{ rappel.date|date("d/m/Y") }}</td><td><a href="{{ path('rappel_admin_delete',{'id': rappel.id}) }}" class="btn btn-primary">Suprime</a></td>
			</tr>
			{% endfor %}
	</tbody>
</table>
</div>
{% else %}	
	{% include 'security/login.html.twig' %}
{% endif %}
{% endblock %}
