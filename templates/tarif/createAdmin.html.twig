{% extends 'layoutAdmin.html.twig' %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="table-bordered pl-2 pr-2 pt-5 pb-5">
    <div class="row">
        <div class="col">

    <h1>Page creation</h1><hr>

    {{ form_start(form) }}
        <fieldset class="form-group col-md-6">
            <label for="categorie">Nom de Categorie</label>
            <span class="text-danger font-weight-bold">*</span>
            {{ form_widget(form.categorie,{'attr': {'class': 'form-control'}}) }}
        </fieldset>
        <fieldset class="form-group col-md-6">
            <label for="nom">Nom de Produit</label>
            <span class="text-danger font-weight-bold">*</span>
            {{ form_widget(form.nom,{'attr': {'class': 'form-control'}}) }}
        </fieldset>
        <fieldset class="form-group col-md-6">
            <label for="prix">Prix de Produit</label>
            <span class="text-danger font-weight-bold">*</span>
            {{ form_widget(form.prix,{'attr': {'class': 'form-control'}}) }}
        </fieldset>

        <div class="form-group row ml-5">
            <label for="disponible">Disponibilit√© Produit</label>
            <span class="text-danger font-weight-bold">*</span>
            {{ form_widget(form.disponible,{'attr': {'class': 'form-check-input'}}) }}
        </div>
        
        <input class="btn btn-info mb-3" type="submit" value="Create" />
    {{ form_end(form) }}

            <div>
                <a class="btn btn-info mb-3" href="{{ path('tarif_admin_show') }}">Back to the list</a>
            </div>
        </div>
    </div>
</div>
{% else %}  
    {% include 'security/login.html.twig' %}
{% endif %}
{% endblock %}