{% extends 'layoutAdmin.html.twig' %}
{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="table-bordered pl-2 pr-2 pt-5 pb-5">
    <div class="row">
        <div class="col">
            <h1>Page Edit</h1><hr>
    {{ form_start(edit_form) }}
        <fieldset class="form-group">
            <label for="titre">Titre </label>
            {{ form_widget(edit_form.titre,{'attr': {'class': 'form-control'}}) }}
        </fieldset>
        <fieldset class="form-group">
            <label for="contenu">Contenu </label>
            {{ form_widget(edit_form.contenu,{'attr': {'class': 'form-control'}}) }}
        </fieldset>
        <input type="submit" class="btn btn-info mb-3" value="Edit" />
    {{ form_end(edit_form) }} 
        </div>   
    </div>
    <a class="btn btn-info mb-3" href="{{ path('page_admin_show') }}">Back to the list</a>
</div>
{% else %}  
    {% include 'security/login.html.twig' %}
{% endif %}
{% endblock %}