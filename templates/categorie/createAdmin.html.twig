{% extends 'layoutAdmin.html.twig' %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="table-bordered pl-2 pr-2 pt-5 pb-5">
    <div class="row">
        <div class="col-md-9">
            <h1>Page creation</h1><hr>

            {{ form_start(form) }}
                <fieldset class="form-group">
                    <label for="categore">Categorie </label>
                    {{ form_widget(form.categorie,{'attr': {'class': 'form-control'}}) }}
                </fieldset>
                <input class="btn btn-info mb-3" type="submit" value="Create" />
            {{ form_end(form) }}
            <a class="btn btn-info mb-3" href="{{ path('categorie_admin_show') }}">Back to the list</a>
        </div>
    </div>
</div>
{% else %}  
    {% include 'security/login.html.twig' %}
{% endif %}
{% endblock %}